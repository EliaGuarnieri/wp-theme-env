{
  "name": "wp-theme-env",
  "version": "1.2.6",
  "private": true,
  "repositoryUrl": "https://github.com/EliaGuarnieri/wordpress-theme.git",
  "description": "A simple test theme for WordPress.",
  "keywords": [ ],
  "author": "",
  "license": "ISC",
  "scripts": {
    "postinstall": "wp-env run cli --env-cwd=wp-content/themes/src composer install",
    "composer": "wp-env run cli --env-cwd=wp-content/themes/src composer",
    "release": "semantic-release --no-ci",
    "prepare": "husky",
    "dev": "vite build && vite",
    "build": "vite build"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "never",
        [
          "start-case",
          "pascal-case"
        ]
      ]
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/wordpress",
        {
          "type": "theme",
          "slug": "wordpress-theme",
          "withVersionFile": true,
          "path": "./src",
          "releasePath": "dist"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "package-lock.json",
            "src/style.css"
          ]
        }
      ]
    ]
  },
  "packageManager": "pnpm@9.1.2+sha512.127dc83b9ea10c32be65d22a8efb4a65fb952e8fefbdfded39bdc3c97efc32d31b48b00420df2c1187ace28c921c902f0cb5a134a4d032b8b5295cbfa2c681e2",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/wordpress": "^1.6.1",
    "autoprefixer": "^10.4.19",
    "husky": "^9.0.11",
    "postcss": "^8.4.38",
    "postcss-nested": "^6.0.1",
    "semantic-release": "^23.1.1",
    "tailwind": "^4.0.0",
    "tailwindcss": "^3.4.3",
    "vite": "^5.2.12",
    "vite-plugin-live-reload": "^3.0.3"
  },
  "pnpm": {
    "patchedDependencies": {
      "@semantic-release/wordpress@1.6.1": "patches/@semantic-release__wordpress@1.6.1.patch"
    }
  }
}
